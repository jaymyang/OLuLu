#include "HX711.h"
#include <ESP8266WiFi.h>
#include <WiFiClient.h>

const char* ssid = "Roseliu_5F";       // Replace with your WiFi SSID
const char* password = "75521926";     // Replace with your WiFi password
const char* host = "192.168.1.101";    // IP address of the PC
const uint16_t port = 8080;            // Port number for communication

String Weight = "A";
String temp_Weight = "";
int i;

void setup()
{
  Serial.begin(115200);
  delay(10);

  // Connecting to WiFi
  Serial.println();
  Serial.println("Connecting to WiFi...");
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println();
  Serial.println("WiFi connected");

  Init_Hx711();     // 初始化HX711模組連接的IO設置
  Get_Maopi();      // 取皮重
  delay(3000);
  Get_Maopi();      // 再次取皮重
}

void loop()
{
  Weight = "A";  // 重置 Weight

  for (i = 1; i <= 10; i++)
  {
    temp_Weight = Get_Weight(); // 計算放在感測器上的重物重量
    Weight += "," + temp_Weight;
    delay(1000);  // 每秒讀取一次
  }
  
  WiFiClient client;

  // Connect to the PC
  if (!client.connect(host, port)) {
    Serial.println("Connection failed");
    delay(5000);  // 等待5秒再重試
    return;
  }

  // Send message
  Serial.println("Sending message...");
  client.println(Weight);  // 傳送數據

  // 等待 PC 端回應 (可選)
  long timeout = millis() + 5000;  // 設定 5 秒的 timeout
  while (client.connected() && !client.available() && millis() < timeout) {
    delay(10);
  }

  // 讀取 PC 端回應
  if (client.available()) {
    String response = client.readStringUntil('\n');
    Serial.println("Received response: " + response);
  } else {
    Serial.println("No response from server.");
  }

  client.stop();  // 關閉連線
  delay(5000);    // 等待5秒再進行下一次傳輸
}
